<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_weight="1">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/toolbar"
        android:id="@+id/my_toolbar"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp">
        <TextView
            android:text="Your Baby Today"
            style="@style/today_item_heading"
            android:id="@+id/toolbar_title" />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/days"
        android:layout_weight="0.8"
        android:text="Age"
        tools:text="Overlay"
        style="@style/today_item_heading" />
    <TextView
        android:id="@+id/days_value"
        android:layout_weight="0.8"
        android:text="Age will be populated after at least one week of conception."
        tools:text="Overlay"
        style="@style/today_item" />
    <TextView
        android:id="@+id/countDown"
        android:layout_weight="0.8"
        android:text="Countdown"
        tools:text="Overlay"
        style="@style/today_item_heading" />
    <TextView
        android:id="@+id/countDown_value"
        android:layout_weight="0.8"
        android:text="Countdown will be populated after at least one week of conception."
        tools:text="Overlay"
        style="@style/today_item" />
    <TextView
        android:id="@+id/size"
        android:layout_weight="0.8"
        android:text="Your Baby's Size"
        tools:text="Overlay"
        style="@style/today_item_heading" />
    <TextView
        android:id="@+id/size_value"
        android:layout_weight="0.12"
        android:text="Baby's size will be populated after at least 4 weeks of conception."
        tools:text="Overlay"
        style="@style/today_item" />
    <TextView
        android:id="@+id/development"
        android:layout_weight="0.8"
        android:text="Your baby's Development"
        tools:text="Overlay"
        style="@style/today_item_heading" />
    <TextView
        android:id="@+id/development_value"
        android:layout_weight="0.40"
        android:text="N/A"
        tools:text="Overlay"
        style="@style/today_item" />
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"/>


</LinearLayout>